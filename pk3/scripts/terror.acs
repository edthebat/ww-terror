					HudMessage(s:"Subsonic Suppression System\nMUZZLE VELOCITY -\nDAMAGE -\nRATE OF FIRE -\nGUNSHOT NOISE --"; HUDMSG_TYPEON|HUDMSG_LOG,0,-1,0.1,0.6,3.0,0.01,0.75);
				TakeInventory("AR10Exp",1000);
			}
		}
		Delay(1);
	}
